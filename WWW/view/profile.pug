doctype html
html
    head 
        title DuckLabs
        meta(charset='utf-8')
        link(href="https://fonts.googleapis.com/icon?family=Material+Icons", rel="stylesheet")  
        link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css')
        style 
            include style.css
    body(class="with-background")
        div(class="container pt-100")
            a(class="waves-effect waves-light btn amber darken-2" href="/") Regresar 
                i(class="material-icons right") keyboard_return
            div(class="card grey darken-3 mt-50 noselect ptb-30")
                div(class="center-align")
                    div(class="image-cropper")
                        img(class="circular" src=teammate.imageRoute, alt="photo")
                    div(class="card-title white-text")
                        h1 #{teammate.name}
                        each language in teammate.languages
                            div(class="chip") #{language}
                    div(class="card-content white-text")
                        p(class="flow-text") #{teammate.description}
                        p(class="pt-100") TODO: Curriculum


        script(src='https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js')